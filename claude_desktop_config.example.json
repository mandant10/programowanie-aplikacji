{
  "mcp": {
    "servers": {
      "filesystem": {
        "command": "npx",
        "args": ["@modelcontextprotocol/server-filesystem", "/workspaces/programowanie-aplikacji"]
      },
      "git": {
        "command": "npx", 
        "args": ["@modelcontextprotocol/server-git", "--repository", "/workspaces/programowanie-aplikacji"]
      },
      "postgres": {
        "command": "uvx",
        "args": ["mcp-server-postgres", "postgresql://user:password@localhost/db"]
      }
    }
  }
}